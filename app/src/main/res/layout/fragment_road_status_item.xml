<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RoadStatusItemFragment"
    android:id="@+id/frameLayout2">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabbed_road_status_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/road_status_item_tabs_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/road_status_item_tab_general_text"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/road_status_item_tabs_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/road_status_item_tab_map_text"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
             />


    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/road_status_item_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabbed_road_status_menu">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>